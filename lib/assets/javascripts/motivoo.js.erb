function initMotivooTracking() {
    var xmlhttp;

    if (window.XMLHttpRequest) {
        // code for IE7+, Firefox, Chrome, Opera, Safari
        xmlhttp = new XMLHttpRequest();
    } else {
        // code for IE6, IE5
        xmlhttp = new ActiveXObject("Microsoft.XMLHTTP");
    }
    
    var qrStr = window.location.search;
    qrStr = qrStr.split("?")[1]
    // Pass on query string because user may be using it to track referrals.
    xmlhttp.open("POST", "<%= ::Motivoo.configuration.bot_protect_path %>" + (qrStr ? "?" + qrStr : ""), true);
    xmlhttp.send();
}

initMotivooTracking();